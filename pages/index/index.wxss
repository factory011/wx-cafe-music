/* ================================recommend==================================== */
.list-title {
  font-size: 28rpx;
  color: #ffcd32;
  text-align: center; 
  height: 120rpx;
  line-height: 120rpx;
}

swiper image {
  width: 100%;
	height: 100%;
}

.disc-list {
  display: flex;
  justify-content: baseline;
  padding: 20rpx;
}

.disc-left {
  height: 120rpx;
  width: 120rpx;
}

.disc-left image {
  width: 120rpx;
  height: 120rpx;
}

.disc-right {
  padding-left: 20rpx;
  font-size: 28rpx;
  height: 120rpx;
  line-height: 60rpx;
}

.disc-right view:first-child {
  color: #fff;
}

.disc-right view:last-child{
  color: hsla(0,0%,100%,.3);
}

/* ==============================singer================================== */
.singer-title {
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 40rpx;
  font-size: 24rpx;
  color: hsla(0,0%,100%,.5);
  background: #333;
}

.singer-list {
  display: flex;
  padding: 40rpx 0 0 60rpx;
}

.singer-icon {
  width: 100rpx;
  height: 100rpx;
}

.singer-icon image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.singer-name {
  margin-left: 40rpx;
  color: hsla(0,0%,100%,.5);
  font-size: 28rpx;
  height: 100rpx;
  line-height: 100rpx;
}

/* ======================================rank====================================== */
.rank-list {
  display: flex;
  margin: 0 40rpx;
  padding-top: 40rpx;

}

.rank-left {
  width: 200rpx;
  height: 200rpx;
}

.rank-left image {
  width: 200rpx;
  height: 200rpx;
}

.rank-right {
  color: hsla(0,0%,100%,.5);
  font-size: 28rpx;
  height: 200rpx;
  padding-left: 40rpx;
  padding-top: 20rpx;
  width: calc(100% - 200rpx);
}

.rank-song {
  height: 60rpx;
  overflow: hidden;
}

.text {
display: block;
overflow: hidden;
white-space: nowrap;
text-overflow: ellipsis; 
}

/* ====================================search======================================== */
.search-wrap {
  position: relative;
  margin: 40rpx;
  padding: 0 10rpx;
}

.search input {
  width: 85%;
  height: 80rpx;
  background-color: #333;  
  border-radius: 20rpx;
  font-size: 28rpx;
  padding: 0 20rpx 0 80rpx;
}

.search-icon {
  position: absolute;
  left: 30rpx;
  top: 20rpx;
}

.hot-search {
  font-size: 28rpx;
  color: hsla(0,0%,100%,.5);
  padding-left: 60rpx;
}

.hot-group {
  overflow: hidden;
  margin-top: 40rpx;
}

.hot-item{
  color: hsla(0,0%,100%,.3);
  font-size: 28rpx;
  padding: 5px 10px;
  margin: 0 20px 10px 0;
  border-radius: 6px;
  background: #333;
  float: left;
  display: block;
}

/* ==================================song====================================== */
.icon-back {
	position: fixed;
	padding: 20rpx;
	z-index: 99
}

.iconzuojiantou {
	color: #ffcd32;
	font-size: 44rpx;
	padding: 18rpx;
}

.iconfont.iconzuojiantou {
	font-size: 46rpx;
	font-weight: bold;
}

.song-title {
	color: #fff;
	font-size: 36rpx;
	position: fixed;
	top: 18rpx;
	left: 80rpx;
	z-index: 99;
}

.bg-image {
	overflow: hidden;
}

.bg-image image {
	width: 100%;
	height: 400rpx;
	position: fixed;
}

.bg-image-content {
	width: 100%;
	height: 400rpx;
}

.song-list-wrap {
	padding: 40rpx 60rpx;
}

.song-list {
	padding-top: 40rpx;
}

.song-list .name {
	color: #fff;
}

.song-list .desc {
	color: hsla(0,0%,100%,.3);
	margin-top: 8rpx;
}

