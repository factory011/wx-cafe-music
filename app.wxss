@import "/lib/style/iconfont.wxss";
/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
/* 背景颜色 */
page {
  background-color: #000;
}
/* 公共头部 */
.header {
  overflow: hidden;
  position: fixed;
  width: 100%;
  z-index: 99;
  background: #000;
}
.header-content {
  height: 100rpx;
}
.header .item {
  float: left;
  width: 25%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 36rpx;
  color: hsla(0,0%,100%,.5);
}
.active {
  color: #ffcd32;
  border-bottom: 2px solid #ffcd32;
}
/* 公共播放器 */
.play-wrap {
	position: fixed;
	bottom: 0;
	height: 120rpx;
	width: 100%;
	background-color: #333;
	border: none;
}

.play-left {
	float: left;
}

.play-left image {
	width: 100rpx;
	height: 100rpx;
	margin-top: 10rpx;
	margin-left: 50rpx;
}

.play-left .name {
color: #fff;
font-size: 28rpx;
position: absolute;
left: 180rpx;
top: 12rpx;
}

.play-left .desc {
color: hsla(0,0%,100%,.3);
font-size: 24rpx;
position: absolute;
left: 180rpx;
top: 70rpx;
}

.play-right {
	float: right;
	height: 120rpx;
	line-height: 120rpx;
	padding-right: 22rpx;
}

.iconhoutui,
.iconai05,
.iconbofang,
.iconqianjin {
	color: rgba(255,205,49,.5);
	margin: 0 10rpx;
}

.iconfont {
	font-size: 72rpx;
}